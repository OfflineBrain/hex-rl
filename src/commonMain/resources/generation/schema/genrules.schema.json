{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://com.offlinebrain/schema/hexrl/genrules.schema.json",
  "title": "Constraint",
  "description": "A constraint on a transformation.",
  "type": "object",
  "properties": {
    "size": {
      "type": "object",
      "$ref": "room_size.schema.json"
    },
    "generations": {
      "type": "integer",
      "minimum": 1
    },
    "initialStates": {
      "type": "object",
      "propertyNames": {
        "$ref": "cell.schema.json"
      },
      "patternProperties": {
        "": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "minProperties": 1
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "states": {
            "type": "array",
            "items": {
              "$ref": "cell.schema.json"
            },
            "minItems": 1
          },
          "transformations": {
            "type": "array",
            "items": {
              "$ref": "transformation_rule.schema.json"
            },
            "minItems": 1
          }
        }
      },
      "minItems": 1
    }
  },
  "required": [
    "generations",
    "initialStates",
    "rules",
    "size"
  ]
}
